<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f8f9fa" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40dp"
        android:text="Data Siswa" />

    <RelativeLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/lblnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/inputnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblnama"
            android:text="Muhammad Fahru Rozi" />

        <TextView
            android:id="@+id/lblalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="8pt"
            android:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/inputalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblalamat"
            android:text="Jalan Subang 5 No 40" />

        <TextView
            android:id="@+id/lblkampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kampus"
            android:textSize="8pt"
            android:layout_marginTop="160dp" />

        <EditText
            android:id="@+id/inputkampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblkampus"
            android:text="SMK Negeri 4 Bandung"/>

        <LinearLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputkampus"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/profile" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/profile" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/profile" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/image"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:text="Previous" />

            <Button
                android:id="@+id/next"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:text="Next" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>